<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#03a9f5" />
            <gradient android:angle="-90" android:startColor="#FF037AB1" android:endColor="#FF58C4F5"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#03a9f5" />
            <solid android:color="#037ab1"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#03a9f5" />
            <gradient android:angle="-90" android:startColor="#22b2f4" android:endColor="#0476ab" />
        </shape>
    </item>
</selector>